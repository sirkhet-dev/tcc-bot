# Telegram Bot Token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# Authorized Telegram User ID (get from @userinfobot)
ALLOWED_USER_ID=123456789

# Claude Code binary path (optional, default: claude)
CLAUDE_BIN=claude

# Skip Claude Code permission prompts (optional, default: false)
CLAUDE_SKIP_PERMISSIONS=false

# Root directory containing your projects (optional, default: ./projects)
WORKSPACE_ROOT=./projects

# Optional project allowlist (comma-separated directory names)
# PROJECT_ALLOWLIST=repo-a,repo-b

# Claude Code response timeout in ms (optional, default: 300000 = 5min)
RESPONSE_TIMEOUT_MS=300000

# Grace period before force kill in /stop (optional, default: 5000)
STOP_GRACE_MS=5000

# Max user message size in chars (optional, default: 6000)
MAX_PROMPT_CHARS=6000

# Per-user message rate limit (optional)
MESSAGE_RATE_LIMIT_WINDOW_MS=60000
MESSAGE_RATE_LIMIT_MAX=20
